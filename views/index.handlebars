<!doctype html>
<html>
<head>
	<title>Calendar</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/calendar.css" rel="stylesheet">
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/introHCI.js"></script>
     
</head>

<body>
	<div class="container">
		<button class="btn btn-primary btn-lg" onclick="window.location='login.html'">WIZARD OF OZ</button>

		<h2>Modal Login Form</h2>

		<button onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Login</button>

		<div id="id01" class="modal">
		  
		  <form class="modal-content animate" action="/action_page.php">
		    <div class="imgcontainer">
		      <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
		      <img src="img_avatar2.png" alt="Avatar" class="avatar">
		    </div>

		    <div class="container">
		      <label for="uname"><b>Username</b></label>
		      <input type="text" placeholder="Enter Username" name="uname" required>

		      <label for="psw"><b>Password</b></label>
		      <input type="password" placeholder="Enter Password" name="psw" required>
		        
		      <button type="submit">Login</button>
		      <label>
		        <input type="checkbox" checked="checked" name="remember"> Remember me
		      </label>
		    </div>

		    <div class="container" style="background-color:#f1f1f1">
		      <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
		      <span class="psw">Forgot <a href="#">password?</a></span>
		    </div>
		  </form>
		</div>

		<!-- links to the information page -->
		<div class="info"><h2><a href="info.html">&#9432</a></h2></div>

		<!-- App Title -->
		<div class="jumbotron">
			<h1>Prioritize</h1>

			<!-- Budgeting Status Bar that updates your daily costs -->
			<div class="row" style="width: 100%">
			<div class="column" id="col-left" style="width: 250px; min-height: 100%; float: left; background-color: red;">
				<div id="statusBar">Budget Status BAR</div>

			</div> <!-- End of #column1 -->

			<!-- The Date -->
			<div class="column" id="col-right" style="margin-left: 300px; min-height: 100%; background-color: white;">
				<div class="btn-group-date btn-responsive">

					<!-- get yesterday -->
					<button class="btn btn-primary btn-lg btn-responsive" onclick="window.location='yesterday.html'">&lt</button>
					<!-- end get yesterday -->

					<!-- get today -->
					<button id="dateToday.js" class="btn btn-primary btn-lg btn-responsive" onclick="window.location='calendar.html'">
						<!-- This is the getDate function. Need to transfer this to javascript file-->
						<script type="text/javascript">
							var d = new Date();
							var weekday=new Array("Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday");
							var monthname=new Array("Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec");
							document.write(weekday[d.getDay()] + ", ");
							document.write(monthname[d.getMonth()] + ". ");
							document.write(d.getDate() + ", ");
							document.write(d.getFullYear());
						</script>
					</button> <!-- end today -->

					<!-- get tomorrow -->
					<button class="btn btn-primary btn-lg btn-responsive" onclick="window.location='tomorrow.html'">&gt</button>
					<!-- end get tomorrow -->
                </div> <!-- End of group of button for Date -->

                <div class="estimated_budget">
					<p>Your Goal</p>
                    <p>budget: <input type="text" id="budget"></p>
                    <input type="submit" value="Submit">
				</div>

				<!-- The Item List -->
				<div class="budgetList">
					{{#each itemDatabase}}
					<ol><div class="itemData">
						<p>{{item_name}}</p>
						<p>{{item_price}}</p>
						<p>Category: {{item_priority}}</p>
					</div></ol>
					{{/each}}

					<form id="addItemForm" role="form" method="get" action="/add">
		    			<div class="form-group">
		     				 <label for="item_name">Item Name:</label>
		      				<input type="text" class="form-control" id="item_name" placeholder="Input Name" name="item_name">
		    			</div>
		   				 <div class="form-group">
		     			 	<label for="item_price">Price:</label>
		      				<input type="text" class="form-control" id="item_price" placeholder="Input Number with $" name="item_price">
		    			</div>
		    			<div class="form-group">
		     			 	<label for="item_priority">Motive:</label>
		      				<p> Select your motive for this spending</p>
		      				<select>
                                <option value="physical needs">Physical needs</option>
                                <option value="emotional needs">Emotional needs</option>
                                <option value="To kill time">To kill time</option>
                                <option value="A treat">A treat</option>
                                <option value="A treat">Not clear</option>
                            </select>
		    			</div>
		    			<input type="submit" id="submitBtn" class="btn btn-default" value="Add Item"></input>
					</form>
				</div>
				<!-- End of Item List -->

				
			</div> <!-- End of #column2 -->
			</div> <!-- End of rows -->
		</div> <!-- End Jumobotron -->
	</div> <!-- End Container -->

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/introHCI.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.3.0/Chart.min.js"></script>
</body>

</html>